//Javascript Number Type & Number 
// create a number using new keyword- not recommended

var n = new Number(15);
document.write(n+"<br>");
document.write("primative value:"+ n.valueOf()+"<br>");

// create a number by assigning to variable

var n= 15.5;
document.write(n+"<br>");
//check for a valid number
var numberCheck = 20 + "t";
document.write(numberCheck+ "is not a valid number:"+isNaN(numberCheck) +"<br>");
// to string
var myNumber = 555;
document.write(myNumber.toString()+"<br>");
